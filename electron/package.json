{
    "name": "@kaetram/electron-app",
    "version": "0.0.0",
    "main": "build/main.js",
    "type": "module",
    "scripts": {
        "electron:build": "tsx --preserve-symlinks build.ts && electron-rebuild",
        "electron:start": "yarn electron:build && electron --inspect=5858 ./",
        "electron:pack": "yarn electron:build && electron-builder build --dir -c ./electron-builder.config.json",
        "electron:make": "yarn electron:build && electron-builder build -c ./electron-builder.config.json -p always"
    },
    "dependencies": {
        "@capacitor-community/electron": "^5.0.0",
        "chokidar": "~3.5.3",
        "electron-is-dev": "~2.0.0",
        "electron-serve": "~1.1.0",
        "electron-unhandled": "~4.0.1",
        "electron-updater": "^5.3.0",
        "electron-window-state": "^5.0.3"
    },
    "devDependencies": {
        "@electron/rebuild": "^3.4.1",
        "electron": "^26.2.2",
        "electron-builder": "~23.6.0",
        "tsx": "^4.6.2",
        "typescript": "^5.0.4"
    },
    "keywords": [
        "capacitor",
        "electron"
    ]
}
