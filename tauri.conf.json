{
    "build": {
        "beforeBuildCommand": "yarn workspace @kaetram/client build",
        "beforeDevCommand": "yarn workspace @kaetram/client dev",
        "devPath": "http://localhost:9000",
        "distDir": "../client/dist"
    },
    "package": {
        "productName": "Kaetram",
        "version": "0.1.0"
    },
    "tauri": {
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.kaetram.app",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Kaetram",
                "width": 800
            }
        ]
    }
}
